@model Shop.Web.ViewModels.Payments.PaymentCheckoutViewModel
@{
    ViewData["Title"] = "Checkout";
}

@section Scripts {
    <link rel="stylesheet" href="~/css/checkout.css" asp-append-version="true" />
}

<h1 class="mb-3 a-fadeUp">Pago</h1>

@Html.ValidationSummary(excludePropertyErrors: false, "", new { @class = "text-danger mb-3 a-fadeUp" })

<div class="co-wrap">

    <!-- RESUMEN -->
    <aside class="co-panel co-summary">
        <div class="co-inner">
            <h2 class="co-title">Resumen</h2>

            <div class="sum-row">
                <span class="sum-label">Orden</span>
                <span class="sum-value">@Model.OrderNumber</span>
            </div>

            <div class="sum-row">
                <span class="sum-label">Estado</span>
                <span class="sum-pill">@Model.OrderStatus</span>
            </div>

            <div class="sum-row">
                <span class="sum-label">Total</span>
                <span class="sum-value">@Model.Amount.ToString("C")</span>
            </div>

            <div class="co-muted" style="font-size:13px;">
                Pago simulado (académico). No se realiza un cobro real.
            </div>
        </div>
    </aside>

    <!-- FORM + TARJETA -->
    <section class="co-panel">
        <div class="co-inner">

            <h2 class="co-title">Datos de la tarjeta</h2>

            <div class="card-preview mb-3">
                <div class="card-preview-top">
                    <div class="card-chip"></div>
                    <div class="card-brand">SHOP · CARD</div>
                </div>

                <div class="card-number">
                    •••• •••• •••• ••••
                </div>

                <div class="card-preview-bottom">
                    <div>
                        <p class="card-label">Titular</p>
                        <p class="card-value">@(!string.IsNullOrWhiteSpace(Model.CardHolder) ? Model.CardHolder : "NOMBRE APELLIDO")</p>
                    </div>
                    <div style="text-align:right">
                        <p class="card-label">Exp</p>
                        <p class="card-value">@(!string.IsNullOrWhiteSpace(Model.Expiration) ? Model.Expiration : "MM/AA")</p>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrWhiteSpace(Model.Error))
            {
                <div class="co-error mb-3">
                    @Model.Error
                </div>
            }

            <form class="co-form" asp-controller="Payments" asp-action="Checkout" method="post" novalidate>
                @Html.AntiForgeryToken()

                <!-- Hidden -->
                <input type="hidden" asp-for="OrderId" />
                <input type="hidden" asp-for="OrderNumber" />
                <input type="hidden" asp-for="Amount" />
                <input type="hidden" asp-for="OrderStatus" />

                <div class="mb-3">
                    <label asp-for="CardHolder" class="form-label">Titular</label>
                    <input asp-for="CardHolder" class="form-control" placeholder="Nombre y apellido" />
                    <span asp-validation-for="CardHolder" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CardNumber" class="form-label">Número de tarjeta</label>
                    <input asp-for="CardNumber" class="form-control" placeholder="XXXX XXXX XXXX XXXX" />
                    <span asp-validation-for="CardNumber" class="text-danger"></span>
                </div>

                <div class="co-grid2">
                    <div class="mb-3">
                        <label asp-for="Expiration" class="form-label">Expiración</label>
                        <input asp-for="Expiration" class="form-control" placeholder="MM/AA o MMYY" />
                        <span asp-validation-for="Expiration" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Cvv" class="form-label">CVV</label>
                        <input asp-for="Cvv" class="form-control" placeholder="123" />
                        <span asp-validation-for="Cvv" class="text-danger"></span>
                    </div>
                </div>

                <button type="submit" class="btn btn-success co-paybtn">
                    Pagar @Model.Amount.ToString("C")
                </button>

                <div class="mt-2 co-muted" style="font-size:13px;">
                    Tip: puedes simular “rechazo” luego con reglas fake.
                </div>
            </form>

        </div>
    </section>

</div>
