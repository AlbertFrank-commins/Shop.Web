@model Shop.Web.ViewModels.Payments.PaymentSuccessViewModel
@{
    ViewData["Title"] = "Pago realizado";
}

@section Scripts {
    <link rel="stylesheet" href="~/css/payment-success.css" asp-append-version="true" />
}

<div class="ps-wrap a-fadeUp">
    <div class="ps-card">
        <div class="ps-inner">

            <div class="ps-check">✅</div>

            <h1 class="ps-title">Pago realizado</h1>
            <p class="ps-sub">Tu transacción fue registrada correctamente.</p>

            <div class="ps-details">
                <div class="ps-row">
                    <span class="ps-label">ID</span>
                    <span class="ps-value">@Model.PaymentId</span>
                </div>

                <div class="ps-row">
                    <span class="ps-label">Monto</span>
                    <span class="ps-value">@Model.Amount.ToString("C")</span>
                </div>

                <div class="ps-row">
                    <span class="ps-label">Tarjeta</span>
                    <span class="ps-value">**** **** **** @Model.Last4</span>
                </div>

                <div class="ps-row">
                    <span class="ps-label">Titular</span>
                    <span class="ps-value">@Model.CardHolder</span>
                </div>
            </div>

            <div class="ps-actions">
                <a class="btn btn-primary" asp-controller="Catalog" asp-action="Index">Seguir comprando</a>
                <a class="btn btn-outline-dark" asp-controller="Orders" asp-action="Index">Ver órdenes</a>
            </div>

        </div>
    </div>
</div>
