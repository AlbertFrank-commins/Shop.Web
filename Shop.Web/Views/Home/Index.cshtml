@{
    ViewData["Title"] = "Inicio";
}

<div class="hero mb-4 a-fadeUp">
    <h1>Bienvenido a Shop.Web</h1>
    <p>Explora categorías, encuentra productos y gestiona tu carrito.</p>
</div>

<div class="section-head a-fadeUp" style="animation-delay:.05s">
    <h2 class="m-0">Explorar categorías</h2>
    <a class="btn btn-outline-dark btn-sm" asp-controller="Catalog" asp-action="Index">Ver catálogo</a>
</div>

<div class="row g-3 mt-1 a-fadeUp" style="animation-delay:.10s">

    <div class="col-12 col-md-6 col-lg-3">
        <a asp-controller="Catalog" asp-action="Index" asp-route-search="electronics"
           class="category-card hover-lift">
            <div class="thumb electro">⚡</div>
            <div class="category-body">
                <h5 class="category-title">Electrónica</h5>
                <p class="category-sub">Teléfonos, laptops, gadgets</p>
            </div>
        </a>
    </div>

    <div class="col-12 col-md-6 col-lg-3">
        <a asp-controller="Catalog" asp-action="Index" asp-route-search="fashion"
           class="category-card hover-lift">
            <div class="thumb moda">👕</div>
            <div class="category-body">
                <h5 class="category-title">Moda</h5>
                <p class="category-sub">Ropa y accesorios</p>
            </div>
        </a>
    </div>

    <div class="col-12 col-md-6 col-lg-3">
        <a asp-controller="Catalog" asp-action="Index" asp-route-search="beauty"
           class="category-card hover-lift">
            <div class="thumb belleza">✨</div>
            <div class="category-body">
                <h5 class="category-title">Belleza</h5>
                <p class="category-sub">Skincare y cuidado personal</p>
            </div>
        </a>
    </div>

    <div class="col-12 col-md-6 col-lg-3">
        <a asp-controller="Catalog" asp-action="Index" asp-route-search="home"
           class="category-card hover-lift">
            <div class="thumb hogar">🏠</div>
            <div class="category-body">
                <h5 class="category-title">Hogar</h5>
                <p class="category-sub">Decoración y utilidades</p>
            </div>
        </a>
    </div>

</div>
