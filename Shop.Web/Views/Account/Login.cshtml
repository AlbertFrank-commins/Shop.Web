@model Shop.Web.ViewModels.Identity.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="auth-header">
    <p class="brand">Shop.Web</p>
    <p class="subtitle">Inicia sesión para continuar</p>
</div>

<div class="auth-body">
    <h3 class="mb-3" style="font-weight:700;">Iniciar sesión</h3>

    @if (!string.IsNullOrWhiteSpace(Model?.Error))
    {
        <div class="alert alert-danger" role="alert">
            @Model.Error
        </div>
    }

    <form asp-action="Login" method="post" class="mt-3">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label class="form-label">Email</label>
            <input asp-for="Email" class="form-control" placeholder="admin@shop.com" autocomplete="username" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Password</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Tu contraseña" autocomplete="current-password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">
            Entrar
        </button>

        <div class="divider"></div>

        <p class="muted mb-0">
            Demo:
            <strong>admin@shop.com</strong> /
            <strong>Admin123*</strong>
        </p>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
