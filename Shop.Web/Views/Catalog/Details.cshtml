@using Shop.Contracts.Catalog
@model ProductDto

@{
    ViewData["Title"] = Model.Title;

    var fullStars = (int)Math.Round(Model.Rating); // estrellas llenas
    if (fullStars < 0) fullStars = 0;
    if (fullStars > 5) fullStars = 5;
    var emptyStars = 5 - fullStars;
}

<div class="card shadow-sm">
    <div class="card-body">
        <div class="row">
            <!-- IMAGEN DEL PRODUCTO -->
            <div class="col-md-5 mb-3">
                @if (!string.IsNullOrEmpty(Model.Thumbnail))
                {
                    <img src="@Model.Thumbnail"
                         alt="@Model.Title"
                         class="img-fluid rounded"
                         style="max-height:400px; object-fit:cover;" />
                }
            </div>

            <!-- DETALLE DEL PRODUCTO -->
            <div class="col-md-7">
                <h2 class="mb-3">@Model.Title</h2>

                <h3 class="text-success mb-3">
                    @Model.Price.ToString("C")
                </h3>

                <!-- RATING CON ESTRELLAS -->
                <div class="d-flex align-items-center mb-3">
                    <div class="me-2">
                        @for (int i = 0; i < fullStars; i++)
                        {
                            <span class="text-warning" style="font-size:1.2rem;">★</span>
                        }
                        @for (int i = 0; i < emptyStars; i++)
                        {
                            <span class="text-muted" style="font-size:1.2rem;">☆</span>
                        }
                    </div>
                    <span class="text-muted">
                        (@Model.Rating.ToString("0.0") / 5)
                    </span>
                </div>

                <!-- DESCRIPCIÓN -->
                @if (!string.IsNullOrWhiteSpace(Model.Description))
                {
                    <p class="mb-3">
                        @Model.Description
                    </p>
                }

                <!-- METADATA -->
                <dl class="row mb-4">
                    <dt class="col-sm-3">Categoría:</dt>
                    <dd class="col-sm-9">@Model.Category</dd>

                    <dt class="col-sm-3">Marca:</dt>
                    <dd class="col-sm-9">@Model.Brand</dd>
                </dl>

                <!-- FORMULARIO AGREGAR AL CARRITO -->
                <form asp-controller="Cart" asp-action="Add" method="post" class="mb-3">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="productId" value="@Model.Id" />

                    <div class="input-group" style="max-width: 260px;">
                        <span class="input-group-text">Cantidad</span>
                        <input type="number"
                               name="quantity"
                               value="1"
                               min="1"
                               class="form-control" />
                        <button type="submit" class="btn btn-success">
                            Agregar al carrito
                        </button>
                    </div>
                </form>

                <a asp-action="Index" class="btn btn-secondary">
                    Volver al catálogo
                </a>
            </div>
        </div>
    </div>
</div>
