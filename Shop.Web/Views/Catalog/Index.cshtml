@using Shop.Web.ViewModels.Catalog
@model CatalogIndexViewModel

@{
    ViewData["Title"] = "Catálogo de productos";
}

@section Scripts {
    <link rel="stylesheet" href="~/css/catalog.css" asp-append-version="true" />
}

<div class="catalog-head a-fadeUp">
    <h1 class="m-0">@ViewData["Title"]</h1>

    @if (!string.IsNullOrWhiteSpace(Model.Search))
    {
        <span class="badge badge-soft">Filtro: @Model.Search</span>
    }
</div>

@if (!Model.Products.Any())
{
    <div class="alert alert-warning a-fadeUp" style="animation-delay:.05s">
        No se encontraron productos.
    </div>

    <a class="btn btn-outline-dark a-fadeUp" style="animation-delay:.08s"
       asp-action="Index" asp-route-search="">
        Limpiar filtro
    </a>
}
else
{
    <div class="catalog-grid a-fadeUp" style="animation-delay:.06s">
        @foreach (var product in Model.Products)
        {
            var img = !string.IsNullOrWhiteSpace(product.Thumbnail)
            ? product.Thumbnail
            : Url.Content("~/images/product-placeholder.jpg");

            <a class="catalog-card hover-lift"
               asp-action="Details"
               asp-route-id="@product.Id"
               style="text-decoration:none; color:inherit;">
                <div class="catalog-img">
                    <img src="@img"
                         alt="@product.Title"
                         onerror="this.onerror=null; this.src='@Url.Content("~/images/product-placeholder.jpg")';" />
                </div>

                <div class="catalog-body">
                    <h5 class="catalog-title">@product.Title</h5>
                    <div class="catalog-price">@product.Price.ToString("C")</div>

                    <div class="catalog-cta">
                        <span class="btn btn-primary btn-sm">Ver detalles</span>
                    </div>
                </div>
            </a>
        }
    </div>
}

@if (Model.TotalPages > 1)
{
    <nav class="a-fadeUp" style="animation-delay:.08s" aria-label="Paginación de productos">
        <ul class="pagination mt-4">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(Model.CurrentPage - 1)"
                       asp-route-search="@Model.Search">
                        Anterior
                    </a>
                </li>
            }

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@i"
                       asp-route-search="@Model.Search">
                        @i
                    </a>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(Model.CurrentPage + 1)"
                       asp-route-search="@Model.Search">
                        Siguiente
                    </a>
                </li>
            }
        </ul>
    </nav>
}
