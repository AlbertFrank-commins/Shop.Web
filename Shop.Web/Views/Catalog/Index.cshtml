@using Shop.Contracts.Catalog
@using Shop.Web.ViewModels.Catalog
@model CatalogIndexViewModel

@{
    ViewData["Title"] = "Catálogo de productos";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="m-0">@ViewData["Title"]</h1>
    @if (!string.IsNullOrWhiteSpace(Model.Search))
    {
        <span class="badge bg-dark">Filtro: @Model.Search</span>
    }
</div>

@if (!Model.Products.Any())
{
    <div class="alert alert-warning">
        No se encontraron productos.
    </div>
}
else
{
    <div class="row g-3 mt-2">
        @foreach (var product in Model.Products)
        {
            var img = !string.IsNullOrWhiteSpace(product.Thumbnail)
            ? product.Thumbnail
            : Url.Content("~/images/product-placeholder.jpg");

            <div class="col-12 col-md-6 col-lg-3">
                <div class="card h-100 shadow-sm">
                    <img class="card-img-top"
                         src="@img"
                         alt="@product.Title"
                         style="height:200px; object-fit:cover;"
                         onerror="this.onerror=null; this.src='@Url.Content("~/images/product-placeholder.jpg")';" />

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title" style="min-height: 3rem;">
                            @product.Title
                        </h5>

                        <p class="card-text fw-bold mb-2">
                            @product.Price.ToString("C")
                        </p>

                        <a asp-action="Details"
                           asp-route-id="@product.Id"
                           class="btn btn-primary mt-auto">
                            Ver detalles
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}

@if (Model.TotalPages > 1)
{
    <nav aria-label="Paginación de productos">
        <ul class="pagination mt-4">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(Model.CurrentPage - 1)"
                       asp-route-search="@Model.Search">
                        Anterior
                    </a>
                </li>
            }

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@i"
                       asp-route-search="@Model.Search">
                        @i
                    </a>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(Model.CurrentPage + 1)"
                       asp-route-search="@Model.Search">
                        Siguiente
                    </a>
                </li>
            }
        </ul>
    </nav>
}
