<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shop.Web</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
</head>

<body>
    <header class="app-header">
        <div class="app-header__inner">
            <a asp-controller="Home" asp-action="Index" class="app-brand">Shop.Web</a>

            <form asp-controller="Catalog" asp-action="Index" method="get" class="app-search">
                <input type="text" name="search" placeholder="Buscar productos..." />
                <button type="submit" aria-label="Buscar">🔍</button>
            </form>

            @{
                var path = Context.Request.Path.Value?.ToLower() ?? "";

                string NavClass(string startsWith)
                => path.StartsWith(startsWith) ? "app-navpill active" : "app-navpill";
            }

            <nav class="app-nav">
                <a class="@NavClass("/catalog")" asp-controller="Catalog" asp-action="Index">
                    <span class="icon">🧾</span>
                    <span>Catálogo</span>
                </a>

                <a class="@NavClass("/cart")" asp-controller="Cart" asp-action="Index">
                    <span class="icon">🛒</span>
                    <span>Carrito</span>
                </a>

                <a class="@NavClass("/orders")" asp-controller="Orders" asp-action="Index">
                    <span class="icon">📦</span>
                    <span>Órdenes</span>
                </a>

                @if (User?.Identity?.IsAuthenticated == true)
                {
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="app-navpill app-navpill-btn">
                            <span class="icon">🚪</span>
                            <span>Salir</span>
                        </button>
                    </form>
                }
                else
                {
                    <a class="@NavClass("/account")" asp-controller="Account" asp-action="Login">
                        <span class="icon">👤</span>
                        <span>Login</span>
                    </a>
                }
            </nav>
        </div>
    </header>

    <main class="container app-main">
        @RenderBody()
    </main>

    <footer class="app-footer">
        © 2025 - Shop.Web
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
