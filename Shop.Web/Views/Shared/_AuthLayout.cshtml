<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shop.Web</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #0b1320 0%, #131921 50%, #232f3e 100%);
            min-height: 100vh;
        }

        .auth-wrap {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 24px;
        }

        .auth-card {
            width: 100%;
            max-width: 460px;
            background: #ffffff;
            border-radius: 16px;
            box-shadow: 0 18px 50px rgba(0,0,0,.25);
            overflow: hidden;
        }

        .auth-header {
            padding: 22px 22px 16px;
            background: linear-gradient(135deg, #131921 0%, #232f3e 100%);
            color: white;
        }

        .brand {
            font-weight: 700;
            letter-spacing: .2px;
            margin: 0;
            font-size: 1.15rem;
        }

        .subtitle {
            margin: 6px 0 0 0;
            opacity: .85;
            font-size: .95rem;
        }

        .auth-body {
            padding: 22px;
        }

        .form-control {
            padding: 12px 12px;
            border-radius: 10px;
        }

        .btn-primary {
            padding: 11px 14px;
            border-radius: 10px;
            font-weight: 600;
        }

        .muted {
            color: #6c757d;
            font-size: .9rem;
        }

        .divider {
            height: 1px;
            background: rgba(0,0,0,.08);
            margin: 16px 0;
        }
    </style>
</head>

<body>
    <div class="auth-wrap">
        <div class="auth-card">
            @RenderBody()
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
 